<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous" />
  <link rel="stylesheet" type="text/css" href="/styles/dist/home.css" />
</head>

<body>
  <!-- CONTENT -->

  <div class="main">
    <div class="left-sidebar top-sidebar">
      {{> leftSideBar}}
    </div>

    <div class="middle">
      {{#if imagesCar1 }}
      <div id="carouselExampleFade1" class="carousel slide carousel-fade" data-ride="carousel" data-interval="4250"
        data-pause="hover">
        <div id='carousel1' class="carousel-inner">

          <div class="carousel-item active">
            <img src={{imagesCar1Active}} class="d-block w-100" alt="main {{imagesCar1Active}}" />
          </div>

          {{#each imagesCar1}}
          <div class="carousel-item">
            <img src={{this}} class="d-block w-100" alt={{this}} />
          </div>
          {{/each}}

        </div>

      </div>
      {{/if}}


      {{#if imagesCar2 }}
      <div id="carouselExampleFade2" class="carousel slide carousel-fade" data-ride="carousel" data-interval="6250"
        data-pause="hover">
        <div id='carousel2' class="carousel-inner">

          <div class="carousel-item active">
            <img src={{imagesCar2Active}} class="d-block w-100" alt="main {{imagesCar2Active}}" />
          </div>

          {{#each imagesCar2}}
          <div class="carousel-item">
            <img src={{this}} class="d-block w-100" alt={{this}} />
          </div>
          {{/each}}

        </div>

      </div>
      {{/if}}


      <div id="myModal" class="modal">
        <img class="modal-content" id="img01">
      </div>
    </div>


  </div>

  <!-- SCRIPTS -->
  {{> commonScripts}}
  <script src="/scripts/home.js"></script>
</body>

</html>